<form
  class="mt-4"
  name="container-form"
  method="POST"
  action="/courses/handle-actions"
>
  <div class="d-flex justify-content-between">
    <h3>My courses</h3>
    <a href="/me/deleted/courses">Recycle bin ({{count}})</a>
  </div>
  <div class="mt-3 d-flex gap-3 align-items-center">
    <select
      class="form-select form-select-sm w-25"
      aria-label="Default select example"
      name="action"
      required
    >
      <option value="" selected>--Select action--</option>
      <option value="delete">Delete</option>
      <option value="2">Two</option>
      <option value="3">Three</option>
    </select>
    <button
      type="submit"
      class="btn btn-primary btn-sm btn-apply"
      disabled
    >Apply</button>
  </div>
  <table class="table mt-4">
    <thead>
      <tr>
        <td scope="col">
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="selectAll"
            />
            {{! <label class="form-check-label" for="selectAll">
              Select all
            </label> }}
          </div>
        </td>
        <th scope="col">
          <span>Id</span>
          {{{sortable "id" _sort}}}
        </th>
        <th scope="col">
          <span>Course Name</span>
          {{{sortable "title" _sort}}}
        </th>
        <th scope="col">
          <span>Level</span>
          {{{sortable "level" _sort}}}
        </th>
        <th scope="col" colspan="3">
          <span>Created Time</span>
          {{{sortable "createdAt" _sort}}}
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <td>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="courseIds[]"
                value={{this._id}}
              />
            </div>
          </td>
          {{!-- <th scope="row">{{sum @index 1}}</th> --}}
          <th scope="row">{{this.id}}</th>
          <td>{{this.title}}</td>
          <td>Medium</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href="/courses/{{this._id}}/edit" class="btn btn-info">Edit</a>
          </td>
          <td>
            <a
              href=""
              class="btn btn-danger"
              data-bs-toggle="modal"
              data-bs-target="#delete-course-modal"
              data-bs-id="{{this._id}}"
            >Delete</a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5" class="text-center">
            You have not created any courses.
            <a href="/courses/create">Create new course</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</form>

{{! Delete course modal }}
<div
  class="modal fade"
  id="delete-course-modal"
  tabindex="-1"
  aria-labelledby="deleteCourseLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteCourseLabel">Delete</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Do you sure to delete this course?
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-danger"
          data-bs-dismiss="modal"
          id="delete-course"
        >Delete</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
      </div>
    </div>
  </div>
</div>

